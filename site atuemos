    <script>
        const form = document.getElementById('registrationForm');
        const messageArea = document.getElementById('messageArea');

        form.addEventListener('submit', function(event) {
            event.preventDefault();
            messageArea.innerHTML = ''; 

            const fullName = document.getElementById('fullName').value.trim();
            const email = document.getElementById('email').value.trim();
            const interestArea = document.getElementById('interestArea').value;
            const motivation = document.getElementById('motivation').value.trim();

            let errors = [];

            if (!fullName) {
                errors.push("O campo 'Nome Completo' √© obrigat√≥rio.");
            }
            if (!email) {
                errors.push("O campo 'Email para Contato' √© obrigat√≥rio.");
            } else if (!isValidEmail(email)) {
                errors.push("Por favor, insira um endere√ßo de email v√°lido.");
            }
            if (!interestArea) {
                errors.push("Por favor, selecione uma 'Principal √Årea de Interesse'.");
            }
            if (!motivation) {
                errors.push("O campo 'Sua Motiva√ß√£o' √© obrigat√≥rio.");
            }

            if (errors.length > 0) {
                displayMessage(errors.join('<br>'), 'error');
            } else {
                displayMessage('Inscri√ß√£o recebida! Logo entraremos em cena com mais informa√ß√µes. Obrigado!', 'success');
                form.reset(); 
            }
        });

        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        function displayMessage(message, type) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `p-4 rounded-md shadow-md message-animate text-sm ${type === 'success' ? 'success-message' : 'error-message'}`;
            messageDiv.innerHTML = message; 
            messageArea.appendChild(messageDiv);
            
            messageDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    </script>
